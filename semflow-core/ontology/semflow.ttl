# SemFlow Ontology
# A semantic framework for scientific research workflows
# Built on W3C PROV-O, Dublin Core, and Nanopublication standards

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# W3C Standards
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

# Nanopublications
@prefix np: <http://www.nanopub.org/nschema#> .

# SemFlow
@prefix semflow: <http://semflow.io/ontology#> .

# Ontology metadata
<http://semflow.io/ontology> a owl:Ontology ;
    dcterms:title "SemFlow Ontology" ;
    dcterms:description "An ontology for semantic research workflows, enabling machine-readable science from literature review through publication" ;
    dcterms:created "2025-12-21"^^xsd:date ;
    owl:versionInfo "0.1.0" ;
    rdfs:comment "Extends W3C PROV-O with domain-specific classes for scientific research workflows" .

# ============================================================================
# CLASSES: Scientific Research Entities
# ============================================================================
# All research artifacts are PROV-O Entities to enable provenance tracking

semflow:Evidence a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Evidence" ;
    rdfs:comment "A finding, claim, or insight extracted from scientific literature. Subclass of prov:Entity to enable provenance tracking of how evidence was captured and by whom." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Publication a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Publication" ;
    rdfs:comment "A scientific publication (journal article, preprint, report, etc.) that serves as a source for evidence. Uses Dublin Core metadata for bibliographic information." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Hypothesis a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Hypothesis" ;
    rdfs:comment "A testable claim or proposition derived from evidence. Links to evidence via prov:wasDerivedFrom. May include uncertainty quantification." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:ExperimentalDesign a owl:Class ;
    rdfs:subClassOf prov:Plan ;
    rdfs:label "Experimental Design" ;
    rdfs:comment "A planned experiment or computational study designed to test a hypothesis. Subclass of prov:Plan to link with prov:Activity execution." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Method a owl:Class ;
    rdfs:subClassOf prov:Plan ;
    rdfs:label "Method" ;
    rdfs:comment "A specific procedure, protocol, or computational method used in research. Can be referenced by ExperimentalDesign." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Dataset a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Dataset" ;
    rdfs:comment "A collection of data generated by experimental or computational activities. Links to generating activity via prov:wasGeneratedBy." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Analysis a owl:Class ;
    rdfs:subClassOf prov:Activity ;
    rdfs:label "Analysis" ;
    rdfs:comment "A statistical, computational, or analytical activity performed on datasets. Subclass of prov:Activity to track what was analyzed (prov:used) and what results were produced (prov:generated)." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:Result a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Result" ;
    rdfs:comment "A finding or conclusion derived from analysis, with explicit uncertainty quantification. Links to analysis via prov:wasGeneratedBy." ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

# ============================================================================
# PROPERTIES: Domain-Specific
# ============================================================================
# Only properties not covered by PROV-O or Dublin Core

semflow:content a owl:DatatypeProperty ;
    rdfs:label "content" ;
    rdfs:comment "The textual content of evidence extracted from a source. Captures the specific finding, claim, or insight in the researcher's own words." ;
    rdfs:domain semflow:Evidence ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:statement a owl:DatatypeProperty ;
    rdfs:label "statement" ;
    rdfs:comment "The formal statement of a hypothesis. Should be testable and falsifiable." ;
    rdfs:domain semflow:Hypothesis ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:claim a owl:DatatypeProperty ;
    rdfs:label "claim" ;
    rdfs:comment "The assertion or conclusion made by a result. Should be supported by analysis and include uncertainty quantification." ;
    rdfs:domain semflow:Result ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:objective a owl:DatatypeProperty ;
    rdfs:label "objective" ;
    rdfs:comment "The goal or purpose of an experimental design or method." ;
    rdfs:domain [ owl:unionOf (semflow:ExperimentalDesign semflow:Method) ] ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

semflow:location a owl:DatatypeProperty ;
    rdfs:label "location" ;
    rdfs:comment "File path or URL where a dataset or resource is located." ;
    rdfs:domain semflow:Dataset ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://semflow.io/ontology> .

# ============================================================================
# UNCERTAINTY QUANTIFICATION
# ============================================================================
# Placeholder for future integration with QUDT or UO
# For now, document that uncertainty should use standard ontologies

# NOTE: For uncertainty quantification, SemFlow recommends:
# - QUDT (http://www.qudt.org/) for statistical uncertainties
# - Uncertainty Ontology (http://purl.org/uncertainty#) for general uncertainty
#
# Example usage:
#   <hypothesis/001> uo:hasUncertainty [
#       a uo:SubjectiveUncertainty ;
#       uo:confidence "0.7"^^xsd:decimal
#   ] .

# ============================================================================
# EXPECTED USAGE PATTERNS
# ============================================================================

# Literature Review:
#   <evidence/001> a semflow:Evidence, prov:Entity ;
#       semflow:content "Finding from paper..." ;
#       prov:wasDerivedFrom <publication/doi123> ;
#       prov:wasAttributedTo <agent/researcher> .

# Hypothesis Formation:
#   <hypothesis/001> a semflow:Hypothesis, prov:Entity ;
#       semflow:statement "Testable claim..." ;
#       prov:wasDerivedFrom <evidence/001>, <evidence/002> .

# Experimental Design:
#   <design/001> a semflow:ExperimentalDesign, prov:Plan ;
#       prov:wasDerivedFrom <hypothesis/001> .

# Experimentation:
#   <activity/001> a prov:Activity ;
#       prov:used <design/001> ;
#       prov:generated <dataset/001> .

# Analysis:
#   <analysis/001> a semflow:Analysis, prov:Activity ;
#       prov:used <dataset/001> ;
#       prov:generated <result/001> .

# Publication (Nanopublication):
#   <nanopub/001> a np:Nanopublication ;
#       np:hasAssertion <nanopub/001/assertion> ;
#       np:hasProvenance <nanopub/001/provenance> ;
#       np:hasPublicationInfo <nanopub/001/pubinfo> .

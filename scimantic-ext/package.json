{
  "name": "scimantic-ext",
  "displayName": "Scimantic",
  "description": "Semantic research workflow with RDF knowledge graphs and provenance tracking",
  "version": "0.0.1",
  "publisher": "scimantic",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scimantic.refreshGraph",
        "title": "Refresh Knowledge Graph",
        "icon": "$(refresh)"
      },
      {
        "command": "scimantic.showEvidence",
        "title": "Show Evidence Details"
      },
      {
        "command": "scimantic.openSource",
        "title": "Open Source"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scimantic",
          "title": "Scimantic",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "scimantic": [
        {
          "id": "scimanticKnowledgeGraph",
          "name": "Knowledge Graph"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "scimantic.refreshGraph",
          "when": "view == scimanticKnowledgeGraph",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "scimantic.showEvidence",
          "when": "view == scimanticKnowledgeGraph && viewItem == evidence"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:coverage": "c8 --reporter=lcov --reporter=text vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
